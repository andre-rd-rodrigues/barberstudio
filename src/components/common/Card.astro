---
import { Image } from '@astrojs/image/components';

export interface Props {
  title: string;
  image: string | any;
  icon: string | any;
  description: string;
}

const { title, description, image, icon } = Astro.props;

const IMAGE_SIZES = {
  width: 250,
  height: 550,
  sizes: '',
  aspectRatio: 0,
};
---

<div>
  <Image
    src={image}
    alt={title}
    class="w-full object-cover"
    loading="eager"
    height={IMAGE_SIZES.height}
    width={IMAGE_SIZES.width}
    aspectRatio={IMAGE_SIZES.aspectRatio}
    sizes={IMAGE_SIZES.sizes}
  />
  <div>
    <Image src={icon} alt="A landscape image" class="w-full" loading="eager" width={200} height={100} />
    <h4>{title}</h4>
    <p>{description}</p>
  </div>
</div>

<style></style>
