---
import { Image } from '@astrojs/image/components';

export interface Props {
  title: string;
  image: string | any;
  icon: string | any;
  description: string;
}

const { title, description, image, icon } = Astro.props;
---

<div class="relative w-80">
  <Image src={image} alt={title} class="w-full object-cover" loading="eager" width={390} height={500} />
  <div class="bg-slate-50 p-5">
    <Image src={icon} alt="Barber Studio - Icon" class="mx-auto" loading="eager" width={40} height={40} />
    <h4 class="text-neutral-900 text-lg font-bold mt-3 mb-5 uppercase text-center tracking-widest">{title}</h4>
    <p class="text-neutral-900 font-serif text-justify leading-8">{description}</p>
  </div>
</div>

<style></style>
